@page
@model AS_AssN.Pages.Members.RegisterModel
@{
}

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Register </h1>

			<form class="mt-3" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.FullName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.FullName" />
            <span asp-validation-for="RModel.FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.Password"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.Password" onblur="initialiseFirstname()" />
            <span asp-validation-for="RModel.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.ConfirmedPassword"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.ConfirmedPassword" onblur="initialiseLastname()" />
            <span asp-validation-for="RModel.ConfirmedPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.Email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.Email" />
            <span asp-validation-for="RModel.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.PhoneNo"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.PhoneNo" />
            <span asp-validation-for="RModel.PhoneNo" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.PhoneNo"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.PhoneNo" />
            <span asp-validation-for="RModel.PhoneNo" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.Gender"></label>
        <div class="col-sm-10">
        @foreach (var gender in Model.Genders)
        {
            <input type="radio" asp-for="RModel.Gender" value="@gender"><br/>
        }
            <span asp-validation-for="RModel.PhoneNo" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.CreditCard"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.CreditCard" oninput="this.value = this.value.toLowerCase()" />
            <span asp-validation-for="RModel.CreditCard" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="RModel.Address"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RModel.Address" oninput="this.value = this.value.toUpperCase()" />
            <span asp-validation-for="RModel.Address" class="text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>
</form>